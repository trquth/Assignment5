@model Assignment5.Models.BookViewModel
@{
    ViewBag.Title = "CreateNewBook";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-12 col-lg-12 col-sm-12">
        <div class="panel panel-success">
            <div class="panel-heading"> Thêm sách mới</div>
            <div class="panel-body">
                @using (Html.BeginForm("CreateNewBook", "BookManager", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <fieldset>
                        <div class="form-group">
                            <label class="col-md-2 control-label">Tên sách</label>
                            <div class="col-md-10">
                                <div class="form-group">
                                    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label">Hình ảnh</label>
                            <div class="col-md-10">
                                <div class="form-group">
                                    <div style="position:relative;">
                                        <a class='btn btn-primary' href='javascript:;'>
                                            Choose File...
                                            <input type="file" name="file" style='position:absolute;z-index:2;top:0;left:0;filter: alpha(opacity=0);-ms-filter:"progid:DXImageTransform.Microsoft.Alpha(Opacity=0)";opacity:0;background-color:transparent;color:transparent;' name="file_source" size="40" onchange='$("#upload-file-info").html($(this).val());'>
                                        </a>
                                        &nbsp;
                                        <span class='label label-info' id="upload-file-info"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label">Gía</label>
                            <div class="col-md-10">
                                <div class="form-group">
                                    @Html.TextBoxFor(x => x.Price, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label">Loại sách</label>
                            <div class="col-md-10">
                                <div class="form-group">
                                    @Html.DropDownListFor(x => x.Category_ID, new SelectList(ViewBag.Category, "Category_ID", "Category_Name"), new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label">Tác giả</label>
                            <div class="col-md-10">
                                <div class="form-group">
                                    @Html.DropDownListFor(x => x.AuthorID, new SelectList(ViewBag.Author, "AuthorID", "AuthorName"), new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label">Desc.</label>
                            <div class="col-md-10">
                                <div class="form-group">
                                    @Html.TextAreaFor(x => x.Decription, new { @class = "form-control", rows = "3" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-2"></div>
                            <div class="col-md-10">
                                <div class="form-group">
                                    <input type="submit" class="btn btn-success" value="Lưu" />
                                    <a href="/BookManager/Index" class="btn btn-success">Thoát</a>
                                </div>
                            </div>
                        </div>
                    </fieldset>
                }
            </div>
        </div>
    </div>
</div>